@using EntityLayer
@model List<Category>
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var index = ViewBag.id-1;
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <p class="card-description">
                Category Update
            </p>
            <form class="forms-sample" action="/Category/UpdateCategory" method="post">
                <input type="hidden" class="form-control" name="categoryId" value="@Model[index].categoryId">
                <div class="form-group">
                    <label>Category Name</label>
                    <input type="text" class="form-control" placeholder="Category Name" name="categoryName" value="@Model[index].categoryName">
                </div>
                <div class="form-group">
                    <label>Category Logo</label>
                    <input type="text" class="form-control" placeholder="Category Logo" name="categoryLogoUrl" value="@Model[index].categoryLogoUrl">
                </div>
                <label>Parent Category Name</label>
                <div class="form-group">
                    <select class="form-control" name="categoryParentId">
                        <option></option>
                        @foreach (var item in Model)
                        {
                            if (item.categoryId == Model[index].categoryId)
                            {
                                <option value="@item.categoryId" selected>@item.categoryName</option>
                            }
                            else
                            {
                                <option value="@item.categoryId">@item.categoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" name="categoryDeleted">
                        @if (Model[index].categoryDeleted)
                        {
                                    <option value="False">Active</option>
                                    <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                                    <option value="False"selected>Active</option>
                                    <option value="True">Pasive</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-inverse-info me-2">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i>
                    Submit
                </button>
                <a class="btn btn-inverse-secondary" type="reset" href="/Category/ListCategory">Cancel</a>
            </form>
        </div>
    </div>
</div>

