@using EntityLayer
@model List<Category>
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 grid-margin stretch-card">
              <div class="card m-5" style="box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;">
                <div class="card-body">
                  <h4 class="card-title">Category</h4>
                  <p class="card-description">
                    Category Add
                  </p>
                  <form class="forms-sample" action="/Category/AddCategory" method="post">
                    <div class="form-group">
                      <label>Category Name</label>
                      <input type="text" class="form-control" placeholder="Category Name" name="categoryName">
                    </div>
                    <div class="form-group">
                      <label>Category Logo</label>
                      <input type="text" class="form-control" placeholder="Category Logo" name="categoryLogoUrl">
                    </div>
                    <label>Parent Category</label>
                     <div class="form-group">
                    <select class="form-control" name="categoryParentId">
                        <option></option>
                        @foreach (var item in Model)
                        {
                                <option value="@item.categoryId">@item.categoryName</option>
                        }
                    </select>
                    </div>
                    <div class="form-group">
                      <label>Status</label>
                        <select class="form-control" name="categoryDeleted">
                          <option value="False">Active</option>
                          <option value="True">Pasive</option>
                        </select>
                      </div>
                       <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a class="btn btn-light" type="reset" href="/Category/Index">Cancel</a>
                  </form>
                </div>
              </div>
            </div>

