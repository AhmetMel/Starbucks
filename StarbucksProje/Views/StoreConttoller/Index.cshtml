@using EntityLayer
@model List<Store>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 grid-margin stretch-card">
              <div class="card m-5" style="box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;">
                  <table class="table">
    <thead>
        <tr>
             <th>Size Id</th>
            <th>Size Name</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.StoreId</td>
                            <td>@item.StoreName</td>
                        @if (@item.StoreDeleted)
                        {
                                        <td>Pasive</td>
                        }
                        else
                        {
                                        <td>Active</td>
                        }
                            <td>
                                            <button type="button" class="btn btn-outline-danger  text-center" data-bs-whatever="@item.StoreId" data-bs-toggle="modal" data-bs-target="#decisionPopup"><ion-icon name="trash"></ion-icon></button>
                            </td>
                                        <td><a href="/Store/UpdateStore/@item.StoreId" type="button" class="btn btn-outline-primary ">Update</a></td>
                        </tr>
                }

    </tbody>
</table>
        <div class="text-center d-flex justify-content-center">
            <a href="/Store/AddStore" class="btn btn-success"><ion-icon name="add"></ion-icon></a>
        </div>
    </div>
</div>
<!-- Modal -->
@*#decisionPopup Model*@
<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="deleteLabel">Warning!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="delete-btn" href="" class="btn btn-success">Yes</a>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script> 
    $(document).ready(function(){
        $('#decisionPopup').on('show.bs.modal', function (event) {
          var button = $(event.relatedTarget);
            var StoreId = button.attr('data-bs-whatever');
            var a = document.querySelector("#delete-btn");
            a.href = "/Store/DeleteStore/" + StoreId;
        });
    });
</script>

